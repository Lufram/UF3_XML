<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!DOCTYPE documentos [
    <!ELEMENT documentos (libros , revistas, periodicos)>

        <!ATTLIST libros id CDATA #REQUIRED>
        <!ATTLIST libros tipo_clase (novela | infantil | didactico) #IMPLIED>
        <!ATTLIST libros numero_paginas CDATA #REQUIRED>
        <!ELEMENT libros (titulo, capitulos+, indice, sinopsis)>

            <!ELEMENT titulo (#PCDATA)>

            <!ELEMENT capitulos (titulo, contenido)>
            <!ATTLIST capitulos numero_paginas CDATA #REQUIRED>

                <!ELEMENT contenido (#PCDATA)>
                <!ATTLIST contenido enlace CDATA #REQUIRED>

            <!ELEMENT indice (#PCDATA)>

            <!ELEMENT sinopsis (#PCDATA)>  

        <!ATTLIST revistas id CDATA #REQUIRED>
        <!ATTLIST revistas tipo_clase (informatica | corazon | coches | investigacion | otras) #IMPLIED>
        <!ATTLIST revistas numero_paginas CDATA #REQUIRED>
        <!ELEMENT revistas (titulo, numero_revista, indice_contenido, secciones+)>

            <!ELEMENT numero_revista (#PCDATA)>

            <!ELEMENT indice_contenido (#PCDATA)>

            <!ELEMENT secciones (contenido)>
            <!ATTLIST secciones numero_paginas CDATA #REQUIRED>

                <!ATTLIST contenido enlace CDATA #REQUIRED>

        <!ATTLIST periodicos id CDATA #REQUIRED>
        <!ATTLIST periodicos tipo_clase (nacionales | internacionales) #IMPLIED>
        <!ATTLIST periodicos fecha_publicacion CDATA #REQUIRED>
        <!ELEMENT periodicos (indice, secciones_periodicos+)>

            <!ATTLIST secciones_periodicos tipo_seccion (economica | opinion | deportes | nacional | internacional) #IMPLIED>
            <!ELEMENT secciones_periodicos (articulos+)>

                <!ATTLIST articulos autor CDATA #REQUIRED>
                <!ELEMENT articulos (contenido)>

                    <!ATTLIST contenido enlace CDATA #REQUIRED>

]>

<documentos>

    <libros id="Libro1" tipo_clase="novela" numero_paginas="500"> 
        <titulo>La Biblia</titulo>
        <capitulos  numero_paginas="250">
