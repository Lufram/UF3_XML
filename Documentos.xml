        </capitulos>
        <indice>indice de La Biblia</indice>
        <sinopsis>resumen de La Biblia</sinopsis>
    </libros>

    <revistas id="Revista1" tipo_clase="informatica" numero_paginas="200">
        <titulo>Pccomponentes</titulo>
        <numero_revista>1</numero_revista>
        <indice_contenido>indice</indice_contenido>
        <secciones numero_paginas="100">
            <contenido enlace="enlace">contenido de la seccion</contenido>
        </secciones>
        <secciones numero_paginas="100">
            <contenido enlace="enlace">contenido de la seccion</contenido>
        </secciones>
    </revistas>

    <periodicos id="Peri1" tipo_clase="nacionales" fecha_publicacion="18-07-2001">
        <indice>indice periodico</indice>
        <secciones_periodicos tipo_seccion="economica">
            <articulos autor="Javier">
                <contenido enlace="enlace">contenido del articulo</contenido>
            </articulos>
            <articulos autor="Pepe">
                <contenido enlace="enlace">contenido del articulo</contenido>
            </articulos>
        </secciones_periodicos>
        <secciones_periodicos tipo_seccion="opinion">
            <articulos autor="Ismael">
                <contenido enlace="enlace">contenido del articulo</contenido>
            </articulos>
            <articulos autor="Alberto">
                <contenido enlace="enlace">contenido del articulo</contenido>
            </articulos>
        </secciones_periodicos>
    </periodicos>

</documentos>
